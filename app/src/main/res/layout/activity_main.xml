<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/background_gradient"
>
    <LinearLayout android:layout_width="300dp" android:layout_height="100dp" android:id="@+id/column1"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintVertical_bias="0.77" app:layout_constraintHorizontal_bias="0.505">
        <Button
                android:background="@drawable/btn_style"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn1" android:layout_weight="1"/>
        <Button
                android:background="@drawable/btn_style"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/btn2" android:layout_weight="1"/>
        <Button
                android:background="@drawable/btn_style"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/btn3" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:layout_width="300dp" android:layout_height="100dp" android:id="@+id/column2"
                  android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintVertical_bias="0.41" app:layout_constraintHorizontal_bias="0.505">
        <Button
                android:background="@drawable/btn_style"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/btn7" android:layout_weight="1"/>
        <Button
                android:background="@drawable/btn_style"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/btn8" android:layout_weight="1"/>
        <Button
                android:background="@drawable/btn_style"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/btn9" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:layout_width="300dp" android:layout_height="100dp" android:id="@+id/column3"

                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintVertical_bias="0.59" app:layout_constraintHorizontal_bias="0.505">
        <Button
                android:background="@drawable/btn_style"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/btn4" android:layout_weight="1"/>
        <Button
                android:background="@drawable/btn_style"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/btn5" android:layout_weight="1"/>
        <Button
                android:background="@drawable/btn_style"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/btn6" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerX" android:textColor="@color/colorMyWhite"
            android:textSize="20sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.093"
            app:layout_constraintHorizontal_bias="0.21" android:textAlignment="center"/>
    <TextView
            android:text="Choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerO" android:textColor="@color/colorMyWhite"
            android:textSize="20sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.093"
            app:layout_constraintHorizontal_bias="0.78" android:textAlignment="center"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/o_box"
            android:id="@+id/imgO" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.84"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/playerO"
            app:layout_constraintVertical_bias="0.005"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/x_box"
            android:id="@+id/imgX" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/playerX" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.162"
            app:layout_constraintVertical_bias="0.005"/>
    <ImageView
            android:layout_width="800px"
            android:layout_height="850px" app:srcCompat="@drawable/empty_image"
            android:id="@+id/imgWinner" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.637"/>
    <TextView
            android:text="You: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtYou" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.141"
            app:layout_constraintVertical_bias="0.867" android:textColor="@android:color/background_light"
            android:textSize="20sp"/>
    <TextView
            android:text="Auto: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAuto"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.867" android:textColor="@android:color/background_light"
            android:textSize="20sp" app:layout_constraintStart_toEndOf="@+id/txtYou"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.252"/>
    <TextView
            android:text="Draw: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDraw"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.867" android:textColor="@android:color/background_light"
            android:textSize="20sp" app:layout_constraintStart_toEndOf="@+id/txtAuto"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.462"/>
</android.support.constraint.ConstraintLayout>